<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

  <link rel="stylesheet" type="text/css" charset="utf-8" href="/ext/resources/css/ext-all.css">
  <link rel="stylesheet" type="text/css" charset="utf-8" href="/ext/resources/css/xtheme-gray.css">
  <link rel="stylesheet" type="text/css" charset="utf-8" href="/ext.ux/filetree/css/all.css">



  <%perl> 

  use YAML qw(LoadFile);

  my $data = LoadFile($c->path_to('conf/resources.yaml'));

  # If debug environment variable is set or minified version of js is not available load all files
  # separately
  if ($ENV{PP_DEBUG} or !-e $c->path_to('root/js/all.js')){
    foreach my $j (@{$data->{css}}){
      print '<link rel="stylesheet" type="text/css" charset="utf-8" href="/'.$j.'"></link>', "\n";
    }

    foreach my $j (@{$data->{js}}, @{$c->stash->{plugins}}){
      print '<script type="text/javascript" charset="utf-8" src="/'.$j.'"></script>', "\n";
    }
  } else {
     print '<link rel="stylesheet" type="text/css" charset="utf-8" href="/css/all.css"></link>', "\n";
     print '<script type="text/javascript" charset="utf-8" src="/js/all.js"></script>', "\n";
  }

  </%perl>



<script type="text/javascript" src="http://cdn.uservoice.com/javascripts/widgets/tab.js"></script>

<title>Paperpile</title>

</head>

<body style="height:100%;border-style:solid; background-color:#FFFFFF;font-size:25%;">
  <div id="splash" style="position:absolute;width:100%;height:100%;background-color:#FFFFFF;z-index:1000;">
    <div class="pp-status pp-status-line-container pp-status-info" style="position:fixed; top:50%;left:50%;margin-left:-50px;">
      <table>
        <tr> 
          <td class="pp-basic pp-status-msg">Loading&nbsp;Paperpile</td>
          <td class="pp-basic">
            <div style="border-width:1px;border-style:solid;width:40px;height:8px;opacity:0.5;">
              <div id="splash-progress" style="width:1px;height:8px;background-color:black;opacity:0.5;"></div>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="pp-smallprint" style="position:absolute; bottom:0;right:5;"> Version 0.5 beta. Copyright (c) 2009, 2010 Paperpile</div>
  </div>
</body>
</html>
