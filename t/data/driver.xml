<driver>
<site name="BMC">

  <signature>
    <url>!biomedcentral\.com!</url>
    <url>!genomebiology\.com!</url>
  </signature>

  <rule>
    <pattern>
      <rewrite>!(^.*?\.com)/(\d+-\d+)/(\d+)/(\d+)!$1/content/pdf/$2-$3-$4.pdf!</rewrite>
    </pattern>
  </rule>

  <rule>
    <pattern>
      <rewrite>!(^.*?\.com)/(\d+)/(\d+)/(\d+)/(\w+)!$1/content/pdf/gb-$2-$3-$4-$5.pdf!</rewrite>
    </pattern>
  </rule>

  <test>
    <url>http://www.biomedcentral.com/1471-2105/9/248</url>
    <url>http://dx.doi.org/10.1186/1471-2105-9-248</url>
    <url>http://genomebiology.com/2008/9/12/R168</url>
  </test>
  
</site>

<site name="PloS">

  <signature>
    <url>!plos!</url>
  </signature>

  <rule>
    <pattern>
      <match>!www\..*representation=PDF!</match>
    </pattern>
  </rule>
  
</site>
</driver>
